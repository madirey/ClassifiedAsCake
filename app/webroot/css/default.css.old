#navlist
{
	background: #1a4e88;
	color: #ffffff;
	margin: 0px auto 0px;
	padding: 0;
	//position: absolute;
	//bottom: 0;
}

#navlist ul
{
	padding-left: 0;
	margin-left: 0;
	margin-bottom: 0;
	padding-bottom: 0;
	background: #1A4E88;
	color: White;
	width: 100%;
	font-family: arial, helvetica, sans-serif;
}

#navlist ul li
{
	display: inline;
	margin: 0;
	padding: 0;
}

#navlist ul li a
{
	padding: 0.2em 1em;
	color: #0000aa;
	background: #1A4E88;
	text-decoration: none;
	float: left;
	border-right: 1px solid #fff;
}

